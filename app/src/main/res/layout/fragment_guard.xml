<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#e5e7e9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardFragment">

    <com.google.android.material.card.MaterialCardView

        app:cardElevation="16dp"
        android:id="@+id/pink_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#ec6f78"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/title" >

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        app:cardElevation="16dp"
        android:id="@+id/green_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#63d2c7"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/pink_card" >

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvsos"
        android:elevation="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="SOS"
        android:textColor="#FFF"
        android:textSize="36dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/pink_card"
        app:layout_constraintTop_toTopOf="@+id/pink_card" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Security"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/pink_card"
        app:layout_constraintEnd_toEndOf="@id/pink_card"
        app:layout_constraintStart_toStartOf="@id/pink_card"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvguard"
        android:elevation="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="GUARD"
        android:textColor="#FFF"
        android:textSize="36dp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/green_card"
        app:layout_constraintTop_toTopOf="@+id/green_card" />
    <ImageView
        android:id="@+id/ic_sos"
        android:layout_margin="16dp"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="@id/pink_card"
        app:layout_constraintEnd_toEndOf="@id/pink_card"
        app:layout_constraintBottom_toBottomOf="@id/pink_card"
        android:src="@drawable/ic_sos"
        android:layout_width="56dp"
        android:layout_height="56dp"/>
    <ImageView
        android:id="@+id/ic_guard"

        android:elevation="16dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="@id/green_card"
        app:layout_constraintEnd_toEndOf="@id/green_card"
        app:layout_constraintBottom_toBottomOf="@id/green_card"
        android:src="@drawable/ic_guard1"
        android:layout_width="56dp"
        android:layout_height="56dp"/>

    <TextView
        android:id="@+id/tvsos_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="16dp"
        android:text="In case of emergency please contact my family members to contact me "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/pink_card"
        app:layout_constraintEnd_toStartOf="@id/ic_sos"
        app:layout_constraintTop_toBottomOf="@id/tvsos"
      />

    <TextView
        android:id="@+id/tvguard_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="16dp"
        android:text="In case of emergency please contact my family members to contact me "
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ic_guard"
        app:layout_constraintLeft_toLeftOf="@id/green_card"
        app:layout_constraintStart_toStartOf="@id/green_card"
        app:layout_constraintTop_toBottomOf="@id/tvguard" />
</androidx.constraintlayout.widget.ConstraintLayout>
